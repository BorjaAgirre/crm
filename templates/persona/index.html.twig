{% extends 'base.html.twig' %}

{% block title %}Persona index{% endblock %}

{% block body %}
    <h1>Persona index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Apodo</th>
                <th>Nacimiento</th>
                <th>Comentarios</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for persona in personas %}
            <tr>
                <td>{{ persona.id }}</td>
                <td>{{ persona.Nombre }}</td>
                <td>{{ persona.Apellidos }}</td>
                <td>{{ persona.Apodo }}</td>
                <td>{{ persona.Nacimiento ? persona.Nacimiento|date('Y-m-d') : '' }}</td>
                <td>{{ persona.Comentarios }}</td>
                <td>
                    <a href="{{ path('app_persona_show', {'id': persona.id}) }}">show</a>
                    <a href="{{ path('app_persona_edit', {'id': persona.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_persona_new') }}">Create new</a>
{% endblock %}
